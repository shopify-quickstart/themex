<cart-drawer
  class="fixed top-0 right-0 w-full max-w-md h-full bg-white z-40 transform translate-x-full transition-transform duration-300"
  data-cart-drawer
>
  <div class="flex flex-col h-full">
    <div class="cart-drawer__header flex items-center justify-between p-4 border-b">
      <h2 class="text-xl font-bold">Cart</h2>
      <button class="cart-drawer__close" data-cart-drawer-close>
        {% render 'icon-close', class_name: 'w-5 h-5', color: 'black' %}
      </button>
    </div>

    <div class="cart-drawer__inner flex-1 flex flex-col justify-between overflow-y-auto p-4">
      {% if cart.item_count > 0 %}
        <div class="cart-drawer__items space-y-4" data-cart-items>
          {% for item in cart.items %}
            {% render 'cart-item', item: item, index: forloop.index %}
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center py-8">
          <p class="text-gray-600">Your cart is empty</p>
        </div>
      {% endif %}

      {% if cart.item_count > 0 %}
        <div class="cart-drawer__footer border-t p-4">
          <div class="cart-drawer__total flex items-center justify-between mb-4">
            <span class="font-semibold">Total:</span>
            <span class="text-xl font-bold">{{ cart.total_price | money }}</span>
          </div>
          <form action="{{ routes.cart_url }}" method="post">
            <input type="hidden" name="checkout" value="{{ 'cart.checkout' | t }}">

            <button
              type="submit"
              name="checkout"
              class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-900 transition-colors"
            >
              Checkout
            </button>
          </form>
        </div>
      {% endif %}
    </div>
  </div>
</cart-drawer>

<div class="cart-overlay fixed inset-0 bg-black bg-opacity-50 z-30 hidden" data-cart-overlay></div>
