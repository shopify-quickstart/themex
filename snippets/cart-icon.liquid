<button
  type="button"
  class="relative bg-transparent border-none cursor-pointer p-2"
  aria-label="Open cart"
  data-cart-open-trigger
>
  {% render 'icon-cart', class_name: 'w-5 h-5' %}

  <span
    class="cart-item-count absolute top-0 right-0 w-5 h-5 bg-black text-white text-xs rounded-full flex items-center justify-center"
  >
    {{ cart.item_count }}
  </span>
</button>
