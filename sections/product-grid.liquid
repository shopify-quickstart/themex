{% liquid
  assign selected_collection = collections.all
  assign products_limit = section.settings.products_limit | default: 8
%}

{% if selected_collection.products_count > 0 %}
  <section class="w-full px-4 md:px-8 py-8 md:py-12">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-3xl font-bold mb-6 md:mb-8">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
      {% for product in selected_collection.products limit: products_limit %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products to show",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Product Grid"
    }
  ]
}
{% endschema %}
